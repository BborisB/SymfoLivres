{% extends 'base.html.twig' %}

{% block title %}Modification profil{% endblock %}

{% block body %}
    <turbo-frame id="formResponse">
        <div class="my-4 container">
            {% for message in app.flashes("error") %}
            <div class="alert alert-dismissible alert-danger mt-4 mb-0">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                {{message}}
            </div>
            {% endfor %}
            {% for message in app.flashes("success") %}
            <div class="alert alert-dismissible alert-success mt-4 mb-0">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                {{message}}
            </div>
            {% endfor %}
            <h1>Modification du profil</h1>
            <img class="img-thumbnail my-3" src="/assets/images/utilisateurs/{{app.user.imageName}}" alt="La photo de profil">
            {{form(form)}}
        </div>
    </turbo-frame>
{% endblock %}
