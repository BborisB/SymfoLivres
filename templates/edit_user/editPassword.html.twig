{% extends 'base.html.twig' %}

{% block title %}Modification mot de passe{% endblock %}

{% block body %}
    <div class="my-4 container">
        <turbo-frame id="formResponse">
            {% for message in app.flashes("error") %}
            <div class="alert alert-dismissible alert-danger mt-4 mb-0">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                {{message}}
            </div>
            {% endfor %}
            {% for message in app.flashes("success") %}
            <div class="alert alert-dismissible alert-success mt-4 mb-0">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                {{message}}
            </div>
            {% endfor %}
            <h1 class="mt-4">Modification du mot de passe</h1>
            {{form(form, {attr: {'novalidate': 'novalidate'}})}}
        </turbo-frame>
    </div>
{% endblock %}
