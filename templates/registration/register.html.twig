        {% endfor %}

        <h1>Register</h1>

        {{ form_errors(form) }}

        {# {{form(registrationForm)}} #}
       {{ include('partials/_form.html.twig', {'button_label':"S'enregistrer"}) }}
    </div>
{% endblock %}
