{% block body %}
    <div class="container my-4">
        {{ include('partials/_flashes.html.twig') }}
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
