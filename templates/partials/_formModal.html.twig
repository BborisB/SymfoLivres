<div data-controller="formModal" class="modal fade" id="{{id|default('formModalId')}}" tabindex="-1" aria-labelledby="{{id|default('formModalId')}}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            {{form_start(form, {'attr': {'data-action':'turbo:submit-end->formModal#onFormSubmitEnd'}})}}
            <div class="modal-header">
                <h1 class="modal-title fs-5">{{formTitle|default('Formulaire')}}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{form_widget(form)}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">{{submitLabel|default('Soumettre')}}</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>